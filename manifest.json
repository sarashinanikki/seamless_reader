{
    "manifest_version": 2,
    "name": "Web-novel Seamless Reader",
    "description": "小説家になろう等で、スクロールだけでシームレスに読めるようにする拡張です",
    "version": "1.0.0",
    "content_scripts": [
        {
            "matches": [
                "https://ncode.syosetu.com/*"
            ],
            "js": [
                "js/content_scripts.js"
            ],
            "css": [
                "css/style.css"
            ]
        }
    ],
    "browser_action" : {
        "default_title" : "Seamless Reader",
        "default_popup" : "html/popup.html",
        "default_icon": {
            "19": "images/icon.png"
        }
    },
    "permissions": [
        "https://ncode.syosetu.com/*",
        "storage",
        "tabs"
    ]
}